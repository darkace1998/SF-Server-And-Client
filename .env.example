# Environment variables for Docker Compose
# Copy this file to .env and fill in your values

# Required: Your Steam Web API Token
# Get one at: https://steamcommunity.com/dev/apikey
SF_STEAM_WEB_API_TOKEN=your_steam_web_api_token_here

# Required: Your Steam ID (the host's Steam ID for API requests)
# Find your Steam ID at: https://steamidfinder.com/
SF_HOST_STEAMID=0000000000000000

# Optional: Server configuration
SF_PORT=1337
SF_MAX_PLAYERS=4
SF_ENABLE_LOGGING=true
